<div class="container"><div class="jumbotron"><h1>Burgers!</h1></div>
<div class="row">
    <div class="col-md-6">
        <div class="card">
<div class="card-header"><h2>Uneaten Burgers</h2></div>
<div class="card-body">
<ul>
  {{#each burgers}}
  <div>
    {{#unless devoured}}
      {{burger_name}}<button data-id={{id}} class="devour">Devour It!</button>
    {{/unless}}
    </div>
  {{/each}}
</ul>
</div>
</div>
</div>
<div class="col-md-6">
    <div class="card">
<div class="card-header"><h2>Eaten Burgers</h2></div>
<div class="card-body">
<div>
  {{#each burgers}}
  <div>
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
    </div>
  {{/each}}
</ul>
</div>
</div>
</div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
<h2>Add a Burger</h2></div>
<div class="card-body">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
  </div>
</form>
</div>
</div>
</div>
</div>